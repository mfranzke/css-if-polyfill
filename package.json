{
  "name": "css-if-polyfill",
  "version": "1.0.0",
  "description": "A JavaScript polyfill for CSS if() functionality with style(), media(), and supports() functions",
  "type": "module",
  "source": "src/index.js",
  "main": "dist/index.cjs",
  "module": "dist/index.modern.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.modern.js"
    }
  },
  "types": "dist/index.d.ts",
  "umd:main": "dist/index.umd.js",
  "scripts": {
    "build": "microbundle",
    "test": "jest --testEnvironment=jsdom",
    "test:watch": "jest --testEnvironment=jsdom --watch",
    "dev": "microbundle watch",
    "serve": "http-server -p 3000 -o examples",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "css",
    "polyfill",
    "conditional",
    "if",
    "media-query",
    "supports",
    "style"
  ],
  "author": "Maximilian Franzke",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-jest": "^30.0.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.15.1",
    "xo": "^1.1.1"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/css-if-polyfill/css-if-polyfill.git"
  },
  "bugs": {
    "url": "https://github.com/css-if-polyfill/css-if-polyfill/issues"
  },
  "homepage": "https://github.com/css-if-polyfill/css-if-polyfill#readme",
  "xo": {
    "space": 2,
    "rules": {
      "unicorn/prefer-module": "off",
      "unicorn/prefer-node-protocol": "off"
    }
  }
}
