{
  "name": "lightningcss-if-function",
  "version": "0.0.0",
  "type": "module",
  "description": "Lightning CSS plugin for transforming CSS if() functions to native CSS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfranzke/css-if-polyfill.git"
  },
  "bugs": {
    "url": "https://github.com/mfranzke/css-if-polyfill/issues"
  },
  "author": "Maximilian Franzke",
  "license": "MIT",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.modern.js",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.modern.js"
      }
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "lightningcss",
    "lightningcss-plugin",
    "css",
    "if",
    "media-query",
    "supports",
    "transform"
  ],
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "prepublishOnly": "pnpm run build",
    "pretest:vitest": "pnpm run build",
    "test": "pnpm run '/^test:[^:]*$/'",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest"
  },
  "peerDependencies": {
    "lightningcss": ">=1.0.0"
  },
  "dependencies": {
    "css-if-polyfill": "0.1.3"
  },
  "devDependencies": {
    "lightningcss": "1.22.0",
    "microbundle": "0.15.1",
    "vitest": "3.2.4",
    "xo": "1.1.1"
  },
  "source": "src/index.js",
  "umd:main": "dist/index.umd.js"
}
